{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "assets/*": [
        "./assets/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "layouts/*": [
        "./layouts/*"
      ],
      "pages/*": [
        "./pages/*"
      ],
      "styles/*": [
        "./styles/*"
      ],
      "types/*": [
        "./types/*"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
